<!DOCTYPE html>
<html>
<head>
    <title>Task Manager</title>
    <link rel="stylesheet" href="/styles.css" />
</head>
<body>
<h1>Task Manager</h1>

<form action="/add-task" method="POST" style="margin-bottom: 30px;">
    <input type="text" name="taskName" placeholder="Task name" required />
    <button type="submit">ADD</button>
</form>

<% sections.forEach(section => { %>
    <h2><%= section.title %></h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
        <% tasks.filter(section.filter).forEach(task => { %>
            <tr>
                <td><%= task.name %></td>
                <td><%= task.status %></td>
                <td><%= task.dateAdded %></td>
                <td>
                    <% if (task.status === 'UNSTARTED') { %>
                        <a href="/start-task?taskId=<%= task.id %>">START</a>
                        <a href="/snooze-task?taskId=<%= task.id %>">SNOOZE</a>
                    <% } else if (task.status === 'STARTED') { %>
                        <a href="/unstart-task?taskId=<%= task.id %>">UNSTART</a>
                        <a href="/complete-task?taskId=<%= task.id %>">COMPLETE</a>
                    <% } else if (task.status === 'COMPLETED') { %>
                        <a href="/unstart-task?taskId=<%= task.id %>">UNSTART</a>
                    <% } %>
                </td>
            </tr>
        <% }) %>
    </table>
<% }) %>

<h2>Archived Tasks</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Date Added</th>
        <th>Actions</th>
    </tr>
    <% archivedTasks.forEach(task => { %>
        <tr>
            <td><%= task.name %></td>
            <td><%= task.status %></td>
            <td><%= task.dateAdded %></td>
            <td>
                <a href="/readd-task?taskId=<%= task.id %>">RE-ADD</a>
                <a href="/delete-task?taskId=<%= task.id %>">DELETE</a>
            </td>
        </tr>
    <% }) %>
</table>

<script src="/javascripts/sort.js"></script>
</body>
</html>
