<tr>
    <td><%= task.id %></td>
    <td class="<%= task.status.toLowerCase() %>-task<% if (task.class === 'DEFAULT' && task.status === 'UNSTARTED') { %> default-task<% } %>"
        onclick="window.location.href='/edit-task/<%= task.id %>'">
        <%= task.name %>
    </td>
    <td><%= task.class %></td>
    <td><%= task.dateAdded %></td>
    <td>
        <% if (task.status === 'UNSTARTED') { %>
            <a href="/start-task?taskId=<%= task.id %>" class="action-button">Start</a>
        <% } else if (task.status === 'STARTED') { %>
            <a href="/unstart-task?taskId=<%= task.id %>" class="action-button">Unstart</a>
        <% } %>
        <% if (task.status !== 'COMPLETED') { %>
            <a href="/complete-task?taskId=<%= task.id %>" class="action-button">Complete</a>
        <% } %>
        <% if (!task.snoozed) { %>
            <a href="/snooze-task?taskId=<%= task.id %>" class="action-button">Snooze</a>
        <% } %>
        <a href="/delete-task?taskId=<%= task.id %>" class="action-button">Delete</a>
        <% if (task.class === 'ARCHIVED') { %>
            <a href="/readd-task?taskId=<%= task.id %>" class="action-button">Re-add</a>
        <% } %>
    </td>
</tr>
